{% set attributes = field.attributes %}
{% set fieldName = 'fid' ~ field.fid %}
{% set userfield = user[fieldName] %}

{% if errors %}
    {% set userfield = mybb.input.profile_fields[fieldName] %}
{% endif %}

{% set activeCheck = userfield %}
{% if activeCheck is not iterable %}
    {% set activeCheck = activeCheck|split('\n') %}
{% endif %}

{% if attributes.options is not iterable %}
    {% set options = attributes.options|split('\n') %}
{% else %}
    {% set options = attributes.options %}
{% endif %}

<tr>
    <td>
        <span>{{ field.name }}</span>:<br />
        <span class="smalltext">{{ field.description }}</span>
    </td>
</tr>
<tr>
    <td>
        {% if attributes.type == 'multiselect' and options %}
            <select name="profile_fields[{{ fieldName }}][]" size="{{ field.length|default('3') }}" multiple="multiple">
                {% for option in options %}
                    {% set option = option|trim|replace({'\n': '\\n'}) %}
                    <option value="{{ option }}"{% if option in activeCheck %} selected{% endif %}>{{ option }}</option>
                {% endfor %}
            </select>

        {% elseif attributes.type == 'select' %}
            <select name="profile_fields[{{ fieldName }}]" size="{{ field.length|default('1') }}">
                {% for option in options %}
                    {% set option = option|trim|replace({'\n': '\\n'}) %}
                    <option value="{{ option }}"{% if option in activeCheck %} selected{% endif %}>{{ option }}</option>
                {% endfor %}
            </select>

        {% elseif attributes.type == 'radio' %}
            {% for option in options %}
                <input type="radio" class="radio" name="profile_fields[{{ fieldName }}]" value="{{ option }}"{% if option in activeCheck %} checked{% endif %} />
                <span class="smalltext">{{ option }}</span>
            {% endfor %}

        {% elseif attributes.type == 'checkbox' %}
            {% for option in options %}
                <input type="checkbox" class="checkbox" name="profile_fields[{{ fieldName }}][]" value="{{ option }}"{% if option in activeCheck %} checked{% endif %} />
                   <span class="smalltext">{{ option }}</span><br />
            {% endfor %}

        {% elseif attributes.type == 'textarea' %}
            <textarea name="profile_fields[{{ fieldName }}]" rows="6" cols="30" style="width: 95%">{{ userfield }}</textarea>

        {% else %}
            <input type="text" name="profile_fields[{{ fieldName }}]" class="textbox" size="{{ field.length }}"{% if field.maxlength %} maxlength="{{ field.maxlength }}"{% endif %} value="{{ userfield }}" />

        {% endif %}

    </td>
</tr>